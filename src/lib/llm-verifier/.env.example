# Required (one of these)
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=...
ANTHROPIC_API_KEY=sk-ant-...

# Optional
AI_PROVIDER=openai
AI_DEFAULT_MODEL=gpt-4o-mini
AI_MAX_RETRIES=3
AI_TIMEOUT_MS=30000
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
ENABLE_SENTRY=false
LOG_LEVEL=info

# Verification criteria
VERIFY_TOXICITY=true
VERIFY_FACTUALITY=false
VERIFY_COHERENCE=true
VERIFY_RELEVANCE=true
VERIFY_SAFETY=true
VERIFY_MODERATION=false
VERIFY_BIAS=false